{
  "name": "fdp",
  "version": "0.1.1",
  "description": "Finite Domain Problem reduction system",
  "main": "dist/fdp.js",
  "module": "dist/fdp.es.js",
  "license": "MIT",
  "repository": "joshtch/fdp",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s clean && rollup -c",
    "clean": "rimraf cache coverage dist",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "format": "xo --fix \"**/*.{js,md}\"",
    "format:check": "xo \"**/*.{js,md}\"",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "test:watch1": "jest --watch --bail 1"
  },
  "keywords": [
    "constraint solving",
    "GSAT",
    "finite domain solver",
    "FD",
    "Constraint Reduction system",
    "Minifier",
    "Logic",
    "Deduction"
  ],
  "author": "Peter van der Zee",
  "contributors": [
    "Josh Howe"
  ],
  "dependencies": {
    "fdlib": "joshtch/fdlib#build"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-jest": "^24.0.0",
    "clean-publish": "^1.1.2",
    "cross-env": "^5.0.0",
    "eslint": "^5.0.0",
    "eslint-config-jest-files": "^0.1.3",
    "eslint-config-unicorn-camelcase": "^0.1.1",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-prettier": "^3.0.1",
    "fdo": "joshtch/fdo#build",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.0.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^1.0.0",
    "rimraf": "^2.0.0",
    "rollup": "^1.7.4",
    "rollup-plugin-babel": "^4.0.0",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-terser": "^4.0.0",
    "xo": "^0.24.0"
  },
  "clean-publish": {
    "files": [
      ".DS_Store",
      ".gitignore",
      ".watchmanconfig",
      "babel.config.js",
      "cache",
      "coverage",
      "node_modules",
      "rollup.config.js",
      "src",
      "tests",
      "yarn-error.log",
      "yarn.lock"
    ],
    "fields": [
      "clean-publish",
      "devDependencies",
      "husky",
      "jest",
      "lint-staged",
      "prettier",
      "scripts",
      "xo"
    ],
    "without-publish": true
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "jest": {
    "silent": true,
    "cacheDirectory": "./cache",
    "coveragePathIgnorePatterns": [],
    "coverageThreshold": {
      "global": {
        "statements": 80
      }
    },
    "transformIgnorePatterns": [
      "^<rootDir>/node_modules/(?!fdlib/(src|tests)/).+\\.js$"
    ]
  },
  "lint-staged": {
    "*.{js,md}": [
      "xo --fix",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "es5"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "unicorn-camelcase",
      "jest-files"
    ],
    "rules": {
      "//": "TODO: Fix things so we can turn these on",
      "camelcase": "off",
      "complexity": "off",
      "max-depth": "off",
      "max-nested-callbacks": "off",
      "max-params": "off",
      "new-cap": "off",
      "no-warning-comments": "off",
      "valid-jsdoc": "off"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*.[jt]s?(x)",
          "**/?(*.)+(spec|test).[jt]s?(x)"
        ],
        "extends": [
          "plugin:jest/recommended"
        ],
        "env": {
          "jest/globals": true
        },
        "plugins": [
          "jest"
        ],
        "rules": {
          "jest/no-disabled-tests": "warn",
          "jest/no-focused-tests": "error",
          "jest/no-identical-title": "error",
          "jest/prefer-to-have-length": "warn",
          "jest/valid-expect": "error"
        }
      }
    ],
    "ignores": [
      "cache",
      "coverage",
      "dist",
      "rollup.config.js"
    ]
  }
}
